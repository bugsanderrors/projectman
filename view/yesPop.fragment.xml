<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="yesPop"
        showHeader="false"
        contentWidth="300px"
        contentHeight="450px">

        <content>
            <VBox id="vf1"
                alignItems="Center"
                justifyContent="Center"
                class="sapUiMediumMargin">

                <Image id="imgf1"
                    src="../images/ily.gif"
                    width="250px"
                    densityAware="false"
                    alt="Loading animation"
                    decorative="true" 
                    class="sapUiSmallMarginBottom"/>

                <Text id="tf1" text="Happy Valentine's Day Manisha❤️" textAlign="Center" class="sapUiSmallMarginBottom"/>

                <HBox id="hf1" justifyContent="Center" alignItems="Center" width="100%">

                    <Button id="bf1" icon="sap-icon://heart-2" type="Transparent" press="onCloseYes" />

                </HBox>

            </VBox>
        </content>

    </Dialog>

</core:FragmentDefinition>
