<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="intro"
        showHeader="false"
        contentWidth="300px"
        contentHeight="450px">

        <content>
            <VBox id="vif1"
                alignItems="Center"
                justifyContent="Center"
                class="sapUiMediumMargin">

                <!--HBox id="hif1" justifyContent="Center" alignItems="Center" width="100%" height="100px"/-->

                <Image id="imgif1"
                    src="../images/like.gif"
                    width="125px"
                    densityAware="false"
                    alt="Loading animation"
                    decorative="true" 
                    class="sapUiMediumMargin"/>

                <Text id="tif1" text="Don't share your feelings, they say it pushes people away!" textAlign="Center" class="sapUiSmallMarginBottom"/>
                <Text id="tif2" text="But what's the point of having a heart if it must stay silent?" textAlign="Center" class="sapUiSmallMarginBottom"/>
                <Text id="tif3" text="Someone, somewhere will hold it gentlly, I hope it's you." textAlign="Center" class="sapUiSmallMarginBottom"/>

                <HBox id="hif2" justifyContent="Center" alignItems="Center" width="100%">

                    <Button id="bif1" icon="sap-icon://arrow-right" type="Transparent" press="onCloseIntro" />

                </HBox>


            </VBox>
        </content>

    </Dialog>

</core:FragmentDefinition>
